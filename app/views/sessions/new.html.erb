<h4 class="ui center aligned medium icon header">
  Welcome to MessageMe - a complete Chat App
  <i class="circular orange power off icon"></i>
  Log in to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%=form_for(:session, html: {class:"ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username , "Username" %> 
          <div class="ui left icon input">
            <%= f.text_field :username , placeholder: "Enter a username"%>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password , "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Enter password"%>
            <i class="lock icon"></i>
          </div>
        </div>
          <%= f.button "Login", class: "ui orange submit button" %>
        </div>
    <% end %>
    <div class="middle aligned column">
      <div class="orange ui big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>